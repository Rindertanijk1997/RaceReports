@page "/reports/{id:int}"
@inject ReportsApi Api
@inject AuthState Auth

<a href="/reports">← Tillbaka</a>

<h1>Report</h1>

@if (!string.IsNullOrWhiteSpace(error))
{
    <p style="color:crimson;">@error</p>
}
else if (report is null)
{
    <p>Laddar...</p>
}
else
{
    <div style="max-width:760px; display:grid; gap:16px; margin-top:16px;">

        <div style="border:1px solid #eee; border-radius:12px; padding:12px;">
            <strong>Titel:</strong> @(report.title ?? "(utan titel)")<br />
            <strong>Kategori:</strong> @(report.category ?? "-")<br />
            <strong>Skapad:</strong> @(report.createdAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")<br />
            <strong>Användare:</strong> @(report.user ?? "-")
        </div>

        <div style="border:1px solid #eee; border-radius:12px; padding:12px;">
            <strong>Text</strong>

            @if (string.IsNullOrWhiteSpace(report.text))
            {
                <p style="opacity:0.7; margin-top:8px;">(Ingen text sparad)</p>
            }
            else
            {
                <p style="white-space:pre-wrap; margin-top:8px;">@report.text</p>
            }
        </div>

        <!-- Comments -->
        <div style="border:1px solid #eee; border-radius:12px; padding:12px;">
            <strong>Kommentarer</strong>

            @if (report.comments is null || report.comments.Count == 0)
            {
                <p style="opacity:0.7; margin-top:8px;">(Inga kommentarer)</p>
            }
            else
            {
                <ul style="list-style:none; padding-left:0; margin-top:12px; display:grid; gap:10px;">
                    @foreach (var c in report.comments.OrderByDescending(x => x.createdAt))
                    {
                        <li style="border:1px solid #f1f1f1; border-radius:12px; padding:10px;">
                            <div style="display:flex; justify-content:space-between; gap:10px;">
                                <strong>@(c.user ?? "okänd")</strong>
                                <small>@(c.createdAt?.ToLocalTime().ToString("yyyy-MM-dd HH:mm") ?? "")</small>
                            </div>

                            <p style="white-space:pre-wrap; margin-top:8px;">
                                @(c.text ?? "")
                            </p>
                        </li>
                    }
                </ul>
            }

            @if (Auth.IsLoggedIn)
            {
                <!-- Add comment -->
                <div style="margin-top:14px; display:grid; gap:10px;">
                    <textarea @bind-value="newComment"
                              @bind-value:event="oninput"
                              maxlength="500"
                              placeholder="Skriv en kommentar..."
                              style="width:100%; min-height:90px; padding:10px; border-radius:10px; border:1px solid #e6e6e6;"></textarea>

                    <div style="display:flex; gap:10px; align-items:center;">

                        <button type="button"
                                @onclick="PostComment"
                                style="padding:10px 14px;">
                            @(isPosting ? "Skickar..." : "Skicka kommentar")
                        </button>




                        @if (!string.IsNullOrWhiteSpace(commentError))
                        {
                            <small style="color:crimson;">@commentError</small>
                        }
                    </div>
                </div>
            }
            else
            {
                <p style="opacity:0.7; margin-top:10px;"><em>Logga in för att kommentera</em></p>
            }
        </div>

        <div style="display:flex; gap:10px;">
            <a href="@($"/reports/{id}/edit")">Edit</a>
        </div>
    </div>
}

@code {
    [Parameter] public int id { get; set; }

    private ReportDto? report;
    private string error = "";

    private string newComment = "";
    private bool isPosting;
    private string commentError = "";

    protected override async Task OnParametersSetAsync()
    {
        error = "";
        commentError = "";
        report = null;

        try
        {
            report = await Api.GetById(id);
            if (report is null)
                error = "Hittade inte report (404 eller saknas endpoint).";
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

    private async Task PostComment()
    {
        commentError = "";

        var text = (newComment ?? "").Trim();
        if (text.Length < 2)
        {
            commentError = "Kommentaren är för kort.";
            return;
        }

        int? maybeUserId = Auth.UserId;
        if (maybeUserId is null)
        {
            commentError = "Du måste vara inloggad för att kommentera.";
            return;
        }

        try
        {
            isPosting = true;

            var res = await Api.CreateComment(new CreateCommentDto
            {
                UserId = maybeUserId.Value,
                RaceReportId = report?.id ?? id,
                Text = text
            });


            if (!res.IsSuccessStatusCode)
            {
                var body = await res.Content.ReadAsStringAsync();
                commentError = $"Misslyckades att skicka kommentar ({(int)res.StatusCode}): {body}";
                return;
            }

            newComment = "";
            report = await Api.GetById(id);
        }
        catch (Exception ex)
        {
            commentError = ex.Message;
        }
        finally
        {
            isPosting = false;
        }
    }
}
